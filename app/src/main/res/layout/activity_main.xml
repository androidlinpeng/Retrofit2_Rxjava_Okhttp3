<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <Button
            android:id="@+id/postSetCookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="onClick"
            android:text="Login获取cookie" />

        <Button
            android:id="@+id/get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Get请求"
            android:layout_below="@+id/postSetCookie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/getCookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postSetCookie"
            android:layout_toEndOf="@+id/get"
            android:layout_toRightOf="@+id/get"
            android:onClick="onClick"
            android:text="Get请求带Cookie" />

        <Button
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Post请求"
            android:layout_below="@+id/get"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/postCookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get"
            android:layout_toEndOf="@+id/post"
            android:layout_toRightOf="@+id/post"
            android:onClick="onClick"
            android:text="Post请求带Cookie" />

        <Button
            android:id="@+id/put"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post"
            android:onClick="onClick"
            android:text="put请求带Cookie" />

        <Button
            android:id="@+id/deleteCookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="delete请求带Cookie"
            android:layout_alignBaseline="@+id/put"
            android:layout_alignBottom="@+id/put"
            android:layout_toRightOf="@+id/put"
            android:layout_toEndOf="@+id/put" />

        <Button
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/put"
            android:onClick="onClick"
            android:text="图片下载" />

        <Button
            android:id="@+id/imageCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:onClick="onClick"
            android:text="图片下载Cache" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</LinearLayout>
